@model TravelCompany.Web.Data.Entities.ExpensesEntity
@{
    ViewData["Title"] = "DetailsExpense";
}

<h2>DetailsExpense</h2>

<div>
    <h4>Expense</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Expense)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Expense.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ExpenseTotal)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Travel.Document)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Travel.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Travel.StartDate)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.Travel.EndDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Travel.City)
        </dd>
        <dd>
            @Html.DisplayFor(model => model.Travel.VisitReason)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>

        <dd>
            @if (!string.IsNullOrEmpty(Model.Photo))
            {
            <img src="@Url.Content(Model.Photo)" alt="Image" style="width:200px;height:100px;max-width: 200%; height: auto;" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Details" asp-route-id="@Model.Travel.id" class="btn btn-default">Back to List</a>
</div>

