@model IEnumerable<TravelCompany.Web.Data.Entities.ExpensesTypeEntity>

@{
    ViewData["Title"] = "Expense Types";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-sm">Create New</a>
</p>
<table class="table table-hover table-responsive table-striped" id="MyTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning" data-toggle="tooltip" title="Edit"><i class="glyphicon glyphicon-wrench"></i></a> |
                    <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info" data-toggle="tooltip" title="Detail"><i class="glyphicon glyphicon-eye-open"></i></a> |
                    <button data-id="@item.id" class="btn btn-danger deleteItem" data-toggle="modal" data-placement="top" title="Delete" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
